@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Movie Web API Demo </h1>
    <p>It demonstrate usage of Web API</p>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Movie Name</th>
            <th>Director(s)</th>
            <th>Summary</th>
            <th>Rating</th>
            <th colspan="2" align="center">Operations</th>
        </tr>
    </thead>
    <tbody id="movie_details">
        <tr>
            <td colspan="6" align="center">No Movie Details</td>
        </tr>
    </tbody>
</table>

<div class="modal fade" tabindex="-1" role="dialog" id="save_movie">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Movie Details Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="movie_name">Movie Name: </label>
                        <input type="text" class="form-control" id="movie_name">
                    </div>
                    <div class="form-group">
                        <label for="directors">Movie Directors: </label>
                        <input type="text" class="form-control" id="directors">
                    </div>
                    <div class="form-group">
                        <label for="summary">Movie Summary: </label>
                        <textarea class="form-control" rows="6" id="summary"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="rating">Movie Rating: </label>
                        <select class="form-control" id="rating">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="form-group" id="result">

                    </div>
                    <button type="button" onclick="saveMovie()" class="btn btn-primary">Add Movie Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" id="movie_update">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Movie Details Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="movie_name1">Movie Name: </label>
                        <input type="text" class="form-control" id="movie_name1">
                        <input type="hidden" class="form-control" id="movie_id">
                    </div>
                    <div class="form-group">
                        <label for="directors1">Movie Directors: </label>
                        <input type="text" class="form-control" id="directors1">
                    </div>
                    <div class="form-group">
                        <label for="summary1">Movie Summary: </label>
                        <textarea class="form-control" rows="6" id="summary1"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="rating1">Movie Rating: </label>
                        <select class="form-control" id="rating1">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="form-group" id="result">

                    </div>
                    <button type="button" onclick="updateMovie()" class="btn btn-primary">Save Movie Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            loadAllMovieDetails();
        });
    </script>
}

